        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/headerForegroundColor</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/redColor</item>
        <item name="colorSecondaryVariant">@color/redColor</item>
        <item name="colorOnSecondary">@color/headerForegroundColor</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>
