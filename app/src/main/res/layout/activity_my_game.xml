<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="20dp"
    tools:context=".MyGame">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="BIENVENU SUR MALLY GAME"
        android:textSize="24sp"
        app:fontFamily="@font/amiri" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/mebar"
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                app:cardBackgroundColor="#D5D6C847"
                app:cardCornerRadius="18dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="250dp"


                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="67dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_baseline_lock_24" />

                    <ImageView

                        android:layout_width="310dp"
                        android:layout_height="200dp"
                        android:onClick="ouvrirJeu1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/sudoku"
                        tools:srcCompat="@drawable/sudoku" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="SUDOKU"
                        android:textSize="18sp"
                        app:fontFamily="@font/amiri" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="18dp"
                app:cardBackgroundColor="#F5D5D5D5"
                app:cardCornerRadius="18dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="310dp"
                        android:layout_height="200dp"
                        android:onClick="ouvrirJeu2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/carte" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="SOLITAIRE"
                        android:textSize="18sp"

                        app:fontFamily="@font/amiri" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="18dp"
                app:cardBackgroundColor="#F5D5D5D5"
                app:cardCornerRadius="18dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="310dp"
                        android:layout_height="200dp"
                        android:onClick="ouvrirJeu1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/carte"
                        tools:srcCompat="@drawable/ic_baseline_lock_24" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="SOLITAIRE"
                        android:textSize="18sp"

                        app:fontFamily="@font/amiri" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="18dp"
                app:cardBackgroundColor="#F5D5D5D5"
                app:cardCornerRadius="18dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="310dp"
                        android:layout_height="200dp"
                        android:onClick="ouvrirJeu1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/carte"
                        tools:srcCompat="@drawable/ic_baseline_lock_24" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="SOLITAIRE"
                        android:textSize="18sp"

                        app:fontFamily="@font/amiri" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- ESPACE QUI POUSSE LA NAV EN BAS -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/container_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_navigation"
                android:layout_below="@+id/mebar"
                android:layout_weight="1"></FrameLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#B4D2F1"
                app:itemIconSize="30dp"
                app:labelVisibilityMode="auto"
                app:menu="@menu/bottom_view">

            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </LinearLayout>

    </ScrollView>

</android.widget.LinearLayout>