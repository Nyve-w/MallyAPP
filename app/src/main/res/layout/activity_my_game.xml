<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dg_game"
    tools:context=".MyGame">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="BIENVENU SUR MALLY GAME"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cardCornerRadius="0dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/mebar"
                android:layout_width="305dp"
                android:layout_height="250dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:background="@drawable/btn_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_baseline_lock_24" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="ouvrirJeu1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/g_sudoku"
                        tools:srcCompat="@drawable/g_sudoku" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SUDOKU"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="305dp"
                android:layout_height="250dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:background="@drawable/btn_color"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:onClick="ouvrirJeu2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/g_solit" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="SOLITAIRE"
                        android:textSize="18sp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ESPACE QUI POUSSE LA NAV EN BAS -->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_marginTop="100dp"
            android:id="@+id/container_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_navigation"
            android:layout_below="@+id/mebar"
            android:layout_alignParentBottom="true"
            android:layout_weight="1">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                app:itemIconSize="30dp"
                app:labelVisibilityMode="auto"
                app:menu="@menu/bottom_view"
                android:background="@drawable/btn_color">

            </com.google.android.material.bottomnavigation.BottomNavigationView>


        </FrameLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color">


        <!-- Lottie loader -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLoading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:lottie_fileName="loader.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
    </FrameLayout>

</FrameLayout>