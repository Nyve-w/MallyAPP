<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dg_bg">

    <!-- ================= SCROLL + CONTENU ================= -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Container racine animable -->
        <LinearLayout
            android:id="@+id/rootContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <!-- ================= TON CODE ORIGINAL (INCHANGÃ‰) ================= -->

            <android.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:id="@+id/appBar"
                    android:layout_height="wrap_content">

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:background="@drawable/btn_color"
                        style="@style/Widget.MaterialComponents.Toolbar.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:menu="@menu/main_menu"
                        app:navigationIcon="@drawable/ic_launcher"
                        android:minWidth="30dp" android:minHeight="40dp"
                        android:padding="10dp"
                        app:title="Mally" />
                </com.google.android.material.appbar.AppBarLayout>

                <!-- Card Formation -->
                <LinearLayout
                    android:layout_width="355dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_color"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView18"
                                style="@style/Widget.AppCompat.TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Formation"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/formation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/watch" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Card Game et Musique -->
                <LinearLayout
                    android:layout_width="355dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:background="@drawable/btn_color"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Widget.AppCompat.TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                android:text="Game"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/jeu"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/game" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:background="@drawable/btn_color"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Widget.AppCompat.TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                android:text="Musique"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/musique"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/music" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Card Information -->
                <LinearLayout
                    android:layout_width="355dp"
                    android:layout_height="195dp"
                    android:layout_margin="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_color"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView"
                                style="@style/Widget.AppCompat.TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="information"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/information"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/look" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </android.widget.LinearLayout>

            <!-- ================= FIN TON CODE ================= -->

        </LinearLayout>
    </ScrollView>

    <!-- ================= SPLASH / LOADER LOTTIE ================= -->

    <FrameLayout
        android:id="@+id/splashOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            app:lottie_fileName="loader.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="false" />

    </FrameLayout>

</FrameLayout>
