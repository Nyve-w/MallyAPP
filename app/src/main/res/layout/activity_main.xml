<?xml version="1.0" encoding="utf-8"?>
<androidg.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C6AB8F"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="#FC9">

        <ImageView

            android:id="@+id/toolbarImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="25dp"
            android:src="@drawable/ic_baseline_menu_24" />

        <ImageView

            android:id="@+id/toolbarImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:background="#FC9"
            android:padding="25dp"
            android:src="@drawable/ic_baseline_settings_24" />


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"

        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@android:color/transparent"
            app:cardBackgroundColor="#72F1EAEA"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <TextView
                android:id="@+id/textView"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Formation"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/formation"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:onClick="methForOpenFiles"
                app:srcCompat="@drawable/information" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            app:cardBackgroundColor="#72F1EAEA"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <TextView

                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Information"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:onClick="methForOpenFiles2"
                app:srcCompat="@drawable/formation" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#72F1EAEA"
            android:background="@android:color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <TextView

                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Divertissement"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/jeu"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:onClick="methForOpenFiles3"
                app:srcCompat="@drawable/jeux" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="#9AFDF8F8"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <TextView

                style="@style/Widget.AppCompat.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Musique"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/musique"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:onClick="methForOpenFiles4"
                app:srcCompat="@drawable/musique" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#FC9">

        <ImageView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="30dp"
            android:src="@drawable/ic_baseline_home_24" />

        <ImageView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#FC9"
            android:padding="35dp"
            android:src="@drawable/ic_baseline_info_24" />


    </androidx.appcompat.widget.Toolbar>


</android.widget.LinearLayout>